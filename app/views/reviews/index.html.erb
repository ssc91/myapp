<% if !@reviews_customer.nil? %>

  <h2>Listing reviews</h2>
  <br/><br/>
  <% if customersigned_in? %>
    <table style="max-width:100%"class="table">
      <tr>
        <th width="25%" style="text-align:center;">Restaurant</th>
        <th width="50%" style="text-align:center;">Your feedback</th>
        <th width="25%" style="text-align:center;"></th>
      </tr>

    <% @reviews_customer.each do |review| %>
      <% @this_restaurant = Restaurant.find_by_id(review.restaurant_id) %>
      <tr>
        <td style="text-align:center;"><%= link_to @this_restaurant.name, @this_restaurant, class: "mylinks" %></td>
        <td style="text-align:center;"><%= review.user_feedback %></td>
        <td style="text-align:center;"><%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?' },class: "btn-primary" %></td>
      </tr>
    <% end %>
    </table>

  <% elsif restaurantsigned_in? %>
    <table class="table">
    <tr>
      <th width="30%" style="text-align:center;">User</th>
      <th width="70%" style="text-align:center;">User feedback</th>
    </tr>

    <% @reviews_restaurant.each do |review| %>
      <% @this_customer = Customer.find_by_id(review.user_id) %>
      <tr>
        <td style="text-align:center;"><%= link_to @this_customer.name, @this_customer %></td>
        <td style="text-align:center;"><%= review.user_feedback %></td>
      </tr>
    <% end %>
    </table>
  <%end%>

<%else%>
 <h2> Sorry !! You don't have any reviews </h2>

 <%end%>



<br />

