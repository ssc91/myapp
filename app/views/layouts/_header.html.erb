<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "My app", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if customersigned_in? or restaurantsigned_in? %>
            <li><%= link_to "Restaurants", restaurants_path %></li>
            <% if restaurantsigned_in? %>
              <li><%= link_to "My Menu", items_path %></li>
            <% end %>
            <li><%= link_to "My Reviews", reviews_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% if customersigned_in? %>
                  <li><%= link_to "Profile", current_customer %></li>
                <% else %>
                  <li><%= link_to "Profile", current_restaurant %></li>
                <%end%>
                <li class="divider"></li>
                <li>
                  <% if customersigned_in? %>
                    <%= link_to "Sign out", customersignout_path, method: "delete" %>
                  <% else %>
                    <%= link_to "Sign out", restaurantsignout_path, method: "delete" %>
                  <% end %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Home", root_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Sign In <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "As Customer", customersignin_path %></li>
                <li class="divider"></li>
                <li><%= link_to "As Restaurant", restaurantsignin_path %></li>
              </ul>
            </li>  
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>